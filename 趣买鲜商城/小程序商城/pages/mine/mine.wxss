/* pages/mine/mine.wxss */
.vip_card{
  width: 90%;
  height: 350rpx;
  background:#000;
  color: #F3E6C5;
  border-radius: 10rpx;
  margin: 0 auto 25rpx;
  box-shadow: 20rpx 20rpx 50rpx -5rpx rgba(0, 0,0,.1);
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  position: relative;
  top: 25rpx;
}
.vip_card>text{
  position: absolute;
  top: 15rpx;
  right: 20rpx;
}
.vip_info{
  flex-flow: column;
  padding-top: 60rpx;
}
.vip_info text{
  font-weight: 800;
  font-size: 30rpx;
}
.start_vip{
  width: 200rpx;
  padding: 5rpx 0;
  border-radius: 50rpx;
  text-align: center;
  color: #644826;
  background:-webkit-gradient(linear, 0% 0%, 0% 100%,from(#E5CE9E), to(#C8A668));
  margin-top: 10rpx;
}
.my_list{
  padding:30rpx;
  border-bottom: 1rpx solid #eee;
}
.list_icon{
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}
.list_icon>image{
  width: 100%;
  height: 100%;
}
.list_l{
  justify-content: flex-start;
  font-size: 32rpx;
}
.list_r{
  justify-content: flex-end;
  font-size: 32rpx;
  color: #bfbfbf;
}
.list_r>.icon{
  width: 32rpx;
  height: 32rpx;
  margin-top: -10rpx;
}