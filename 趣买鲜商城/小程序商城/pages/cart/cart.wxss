/* pages/cart/cart.wxss */
page{
  padding-bottom:80rpx;
}
.cart_head{
  height:90rpx;
  background:#fff;
  padding:0 15rpx;
}
.clearAll{
  width:120rpx;
  display:flex;
  align-items:center;
  border:1rpx solid #000;
  border-radius:50rpx;
  padding-right:18rpx;
  margin: 5rpx 10rpx;
}
.num_btn{
  width: 40rpx;
  height: 40rpx;
  position: relative;
}
.num_btn>text{
  font-size: 30rpx;
  font-weight: 600;
  position: absolute;
  top: 20rpx;
  left: 0;
}
.num_btn>image{
  width: 100%;
  height: 100%;
}
.total_pay{
  font-size:45rpx;
}
.goods_list{
  border-bottom: 1rpx solid #eee;
  padding:25rpx;
}
.good_img{
  width: 200rpx;
  height: 200rpx;
  background-repeat: no-repeat;
  background-size: cover;
  margin: 0 20rpx;
}
.good_price{
  font-size: 40rpx;
}
.goods_list .title{
  display: block;
}
.goods_list .goods_text{
  display: block;
  line-height: 40rpx;
}
.num_btn_box{
  width: 150rpx;
  float: right;
}
.cir_check{
  width: 40rpx;
  height: 40rpx;
  border: 1rpx solid #bfbfbf;
  border-radius: 50%;
  margin-left: 5rpx;
  margin-top: 5rpx;
}
.cir_check.active{
  width: 50rpx;
  height: 50rpx;
  border: none;
  background-repeat: no-repeat;
  background-size:cover;
  margin-left: 0;
  margin-top: 0;
}
.cir_check>image{
  width: 100%;
  height: 100%;
}
.cart_pay{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  box-shadow: 0 -10px 40px -5px rgba(0, 0, 0, .1);
  background: #fff;
}
.check_box{
  font-size:28rpx;
  position: relative;
  padding-left:60rpx;
}
.check_box>checkbox{
  opacity: 0;
  z-index: -1;
}
.check_box>view,.check_box>checkbox{
  position:absolute;
  left: 0;
  top: 0;
}
.sub_btn{
  width: 200rpx;
  background: #F9BD01;
  height:100%;
  padding:0;
  border-radius: 0;
  font-size: 28rpx;
  line-height: 100rpx;
  margin-left: 30rpx;
}