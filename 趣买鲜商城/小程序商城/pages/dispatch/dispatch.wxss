.form{
  width: 94%;
  background: #fff;
  box-shadow: 0 10rpx 40rpx -5rpx rgba(0,0,0,.1);
  margin: 30rpx auto 20rpx;
}
.section{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  padding:30rpx 20rpx;
}
.section_title{
  width: 20%;
  font-size: 32rpx;
}
input{
  width: 75%;
}
button{
  width: 80%;
  padding: 5rpx 0;
  border-radius: 50rpx;
  background: #000;
  color: #fff;
  margin-top: 40rpx;
}