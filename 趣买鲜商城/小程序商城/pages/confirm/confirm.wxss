/* pages/confirm/confirm.wxss */
.body{
  padding-top: 20rpx;
}
.list_box>view{
  width: 94%;
  background: #fff;
  margin: 20rpx auto;
  box-shadow: 0 10rpx 40rpx -5rpx rgba(0,0,0,.1);
}
.pay_way{
  border-radius: 20rpx 20rpx 0 0;
}
.way_nav{
  height: 90rpx;
}
.way_nav>text{
  width: 50%;
  height: 100%;
  line-height: 90rpx;
  text-align: center;
  display: inline-block;
  background: #ddd;
  color: #8a8a8a;
}
.way_nav>text.active{
  background: #fff;
  font-size: 32rpx;
  font-weight: 700;
  color: #666;
}
.way_nav>text:nth-child(1).active{
  border-radius: 10rpx 0 10rpx;
}
.way_nav>text:nth-child(2).active{
  border-radius: 0 10rpx 0;
}
.store_info>text{
  display: block;
}
.store_info>text:nth-child(1){
  font-size: 35rpx;
}
.store_info>text:nth-child(2){
  font-size: 30rpx;
}
.card_list>view{
  padding: 20rpx;
}
.card_list>view:nth-child(2){
  border: 1rpx solid #eee;
  border-width: 1rpx 0;
}
.goods_img{
	width:80%;
	display:flex;
  justify-content: flex-start;
  align-items: center;
  overflow: hidden;
}
.good_img{
  width: 120rpx;
  height: 120rpx;
  border: 1rpx solid #eee;
  margin: 0 15rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}
.arr_right{
  width: 32rpx;
  height: 32rpx;
  margin: -13rpx -5rpx 0 5rpx;
}
.arr_right>image{
  width: 100%;
  height: 100%;
}
.order_info>view{
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0;
}
.address>view{
  padding: 20rpx 0;
}
.address>view:nth-child(1){
  border-bottom:1rpx solid #eee; 
  padding-bottom: 20rpx;
}
.address>view:nth-child(2){
  padding-top: 20rpx;
}
.total{
  display: flex;
  justify-content: flex-end;
  border: none !important;
}
.import_text{
  font-size: 32rpx;
  font-weight: 700;
}
.pay_icon{
  width: 50rpx;
  height: 50rpx;
}
.pay_icon>image{
  width: 100%;
  height: 100%;
}
.pay>view{
  padding: 20rpx 20rpx;
}
.wx_pay{
  width:180rpx;
  padding:0 20rpx;
}
.pay_title{
  font-size: 32rpx;
  font-weight: 600;
  color: #666;
  border: 1rpx solid #eee;
}
.pay_text{
  display: flex;
  justify-content: space-between;
  flex-flow: column;
}
.pay_text>view{
  height: 40rpx;
}
.pay_btn{
  width: 100%;
  height: 100rpx;
  background: #f9bd01;
  position: fixed;
  bottom: 0;
  text-align: center;
  line-height: 100rpx;
  font-size: 34rpx;
}