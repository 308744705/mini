/* pages/detail/detail.wxss */
.body>view{
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx 25rpx;                                   
}
.wxParse-p>image{
  width: 100% !important;
}
swiper{
  height: 600rpx;
}
.empty{
	background:#bfbfbf !important;
	color:#fff !important;
}
.num_btn{
  width: 40rpx;
  height: 40rpx;
  position: relative;
}
.num_btn_box{
  margin-right: 20rpx;
}
.num_btn_box>text{
  margin: 0 20rpx;
}
.num_btn>text{
  font-size: 30rpx;
  font-weight: 600;
  position: absolute;
  top: 20rpx;
  left: 0;
}
.num_btn>image{
  width: 100%;
  height: 100%;
}
.fn_handle{
  width: 100%;
  height: 110rpx;
  background: #fff;
  box-shadow: 0rpx -10rpx 40rpx -5rpx rgba(0, 0, 0, .1);
  position: fixed;
  left: 0;
  bottom: 0;
  margin: 0 !important;
  padding: 0 !important;
}
.cart_btn{
  width: 120rpx;
  height: 120rpx;
  background: #fff;
  border-radius: 50%;
  box-shadow: 5rpx 5rpx 40rpx -5rpx rgba(0, 0, 0, .15);
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  bottom:20rpx;
  left:20rpx;
}
.cart_btn>image{
  width: 50%;
  height: 50%;
}
.cart_total{
  width: 35rpx;
  height: 35rpx;
  background: #e4393c;
  border-radius: 50%;
  color: #fff;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  text-align: center;
  line-height: 35rpx;
  font-size:18rpx;
}
.fn_btn{
  width: 180rpx;
  height: 70rpx;
  position: absolute;
  right: 30rpx;
}
.fn_btn text{
  width: 100%;
  height: 100%;
  line-height: 70rpx;
  display: inline-block;
  text-align: center;
  color: #fff;
}
/* .fn_btn text:nth-child(1){
  background:#000;
  border-radius: 50rpx 0 0 50rpx;
} */
.fn_btn text:nth-child(1){
  background: #f9bd01;
  color: #333;
  border-radius:50rpx;
}
.good_img{
  width: 100%;
  height: 600rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}
.good_info{
  padding-top: 10rpx;
}
.good_info .title{
  font-size: 35rpx;
  width: 85%;
}
.good_price{
  height: 50rpx;
}
.good_price .red{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.red text{
  font-size: 40rpx;
  font-weight: 600;
  margin:-10rpx 5rpx 0;
}
.red view{
  font-size: 25rpx;
  border:1rpx solid #e4393c;
  height: 30rpx;
  line-height: 28rpx;
  border-radius: 8rpx;
  margin-left: 20rpx;
  padding: 0 6rpx;
}
.share{
  flex-flow: column;
  width: 80rpx;
  padding: 0;
  background: transparent;
  border: none !important;
  border-width: 0rpx !important;
  margin: 0;
}
.share .icon{
  width: 38rpx;
  height: 38rpx;
  margin: 8px 5px 0;
}
.old_price{
  text-decoration: line-through;
}
.extra_info{
  border-top:1rpx solid #eee;
  padding-top:10rpx;
  margin-top:5rpx;
}
.eval_head{
  width: 50rpx;
  height: 50rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  margin-right: 15rpx;
}
.detail_nav text{
  width: 50%;
  display: inline-block;
  padding: 8rpx 0;
  text-align: center;
}
.detail_nav .active{
  color:#deba7c;
  border-bottom: 2px solid #deba7c;
}
.volume_list{
  padding: 15rpx 5rpx;
  border-bottom: 1rpx solid #eee;
}
.volume_list>view{
  width: 36%;
}
.volume_user{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.volume_user>text{
  width: 180rpx;
  line-height: 38rpx;
  font-size:25rpx;
}
.list_icon{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}
.line{
  width: 100%;
  height: 1rpx;
  background: #eee;
  display: flex;
  justify-content: center;
  align-items: center;
}
.line text{
  text-align: center;
  color: #aaa;
  background: #fff;
  padding: 0 5rpx;
}