}
.dialog-mask{
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}
.dialog-info{
  position: fixed;
  z-index: 5000;
  width: 80%;
  max-width: 600rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #FFFFFF;
  text-align: center;
  border-radius: 3px;
  overflow: hidden;
}
.dialog-title{
  font-size: 36rpx;
  padding: 30rpx 30rpx 10rpx;
}
.dialog-content{
  padding: 10rpx 30rpx 20rpx;
  min-height: 80rpx;
  font-size: 32rpx;
  line-height: 1.3;
  word-wrap: break-word;
  word-break: break-all;
  color: #999999;
}
.dialog-footer{
  display: flex;
  align-items: center;
  position: relative;
  line-height: 90rpx;
  font-size: 34rpx;
}
.dialog-btn{
  display: block;
  -webkit-flex: 1;
  flex: 1;
  position: relative;
  color: #3CC51F;
}
.right_alert{
  width: 600rpx;
  height: 400rpx;
  background: #fff;
  color: #666;
  position: fixed;
  top: 20%;
  left: 50%;
  margin-left: -300rpx;
  z-index: 999;
}
.right_alert button{
  width: 80%;
  background: #51C332;
}
.head_box{
  padding: 0 10px;
  background: #fff;
  height: 40px;
}
.arrow{
  width: 40rpx;
  height: 40rpx;
}
.location{
  height: 80rpx;
  display: flex;
  align-items: center;
}
.clear_bar{
  height: 100rpx;
  overflow: hidden;
}
.nav{
  width: 100%;
  background: #f7f7f7;
  height: 140rpx;
  overflow-x:auto; 
  color: #bfbfbf;
}
.nav_active{
  background: #DEBA7C !important;
  color: #fff;
}
.swiper_tab{
  width: 1200rpx;
  height:100rpx;
  display: flex;
  align-items: center;
  box-shadow: 10rpx 5rpx 35rpx 6rpx rgba(0, 0, 0, .03) inset;
}
swiper{
  background: #f5f5f5;
}
.good_ad{
  width: 100%;
}
.good_cover{
  width: 100%;
  height: 400rpx;
  overflow:hidden;
  background-position:center;
  background-size:cover;
  background-repeat: no-repeat; 
  position: relative;
}
.scroll{
  padding: 0 20rpx;
  height: 59rpx;
  background: #e4393c;
  position: absolute;
  bottom:0;
  left: 0;
  color: #fff;
  border-radius: 0 10rpx 0 0;
}
.scroll_arr{
  position: absolute;
  bottom: 0;
  right: -40rpx;
  width: 0;
  height: 0rpx;
  border: 30rpx solid #F9BD01;
  border-right-color: transparent;
  display: none;
}
.good_ad>image{
  width: 100%;
}
.nav .item{
  padding:0 30rpx;
  background: #fff;
  border-radius:50rpx;
  height: 60rpx;
  margin: 0 10rpx;
  float: left;
}
.good_easy{
  padding: 5rpx 0 25rpx;
  border-bottom: 1rpx solid #eee;
  margin:0 0 25rpx;
  background: #fff;
}
.good_data{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 0 15rpx;
}
.good_info{
  padding:10rpx 15rpx;
}
.good_info .title{
  font-size: 35rpx;
}
.price_box>view{
  height: 50rpx;
}
.discount text{
  font-size: 40rpx;
  font-weight: 600;
}
.old_price{
  color: #8a8a8a;
}
.old_price text{
  text-decoration: line-through;
}
.good_btn{
  padding: 0rpx 25rpx;
  background: #F9BD01;
  border-radius: 30rpx;
  color: #fff;
}
.empty{
  background: #bfbfbf; 
  color: #fff;
}