/* pages/address/address.wxss */
form{
  background: #fff;
  width: 100%;
  height: 80rpx;
  position: relative;
  display: block;
}
.section{
  width: 700rpx;
  background: #F7F7F7;
  border-radius:50rpx;
  height:60rpx;
  position: absolute;
  left: 25rpx;
  top: 50%;
  margin-top: -30rpx;
}
.section>.icon,input{
  position: absolute;
  top: 5rpx;
}
.section>.icon{
  top: 50%;
  margin-top: -20rpx;
  width: 40rpx;
  height: 40rpx;
}
.section>input{
  width: 88%;
  left: 60rpx;
}
.cancel{
  position: absolute;
  right: -55rpx;
  top: 50%;
  margin-top: -30rpx;
}